---
import '../css/main.css'
import Navbar from '../components/Navbar.astro'
import Footer from '../components/Footer.astro'
import { Explore } from "../components/Explore.jsx";
---

<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Horizon Labs</title>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
	</head>
	<body class="bg-gray-50 dark:bg-blue-500 text-gray-900 dark:text-gray-100 transition-colors duration-300">
		<Navbar classes="bg-white dark:bg-gray-800 shadow-md" />
		
		<main>
			<section class="hero min-h-screen flex items-center justify-center bg-gradient-to-b from-blue-500 to-blue-700 text-white">
				<div class="container mx-auto px-6 text-left">
					<h1 class="text-4xl md:text-6xl font-bold mb-8">
						Empowering students to succeed
					</h1>
					<p class="text-xl md:text-2xl mb-12">
						through research and competitions.
					</p>
					<a 
						href="#explore"
						class="bg-white text-blue-600 py-3 px-8 rounded-full text-lg font-semibold hover:bg-blue-100 transition duration-300"
					>
						Learn more
					</a>
				</div>
			</section>

			<section id="explore" class="bg-gradient-to-b from-blue-800 to-gray-800">
				<Explore client:load />
			</section>
		</main>

        <Footer />
    </body>
</html>
