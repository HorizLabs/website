---
import '../css/main.css'
import '../css/components/navbar.css'
const {classes} = Astro.props;
---

<html lang="en">
	<body class="bg-gray-100 dark:bg-gray-900">
        <nav class={`${classes} navbar text-gray-800 dark:text-gray-200 w-full py-4 px-6 flex items-center justify-between bg-white dark:bg-gray-800 shadow-md rounded-lg mx-auto max-w-7xl my-4`}>
            <div class="navbar-brand flex items-center space-x-3">
                <img src="/logo.png" alt="Horizon Labs Logo" class="w-10 h-10" />
                <h1 class="font-black text-2xl text-blue-600 dark:text-white">Horizon Labs</h1>
            </div>
            <ul class="navbar-links flex items-center space-x-6">
                <li><a href="#organization" class="navbar-link hover:text-blue-600 dark:hover:text-blue-400 transition-colors duration-200">Organization</a></li>
                <li><a href="#about" class="navbar-link hover:text-blue-600 dark:hover:text-blue-400 transition-colors duration-200">About Us</a></li>
                <li><a href="#software" class="navbar-link hover:text-blue-600 dark:hover:text-blue-400 transition-colors duration-200">Software</a></li>
                <li><a href="#irpo" class="navbar-link hover:text-blue-600 dark:hover:text-blue-400 transition-colors duration-200">IRPO</a></li>
                <li><a href="#register" class="navbar-link bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 transition-colors duration-200">Register</a></li>
            </ul>
        </nav>
	</body>
</html>